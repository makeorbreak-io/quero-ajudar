<div class="modal fade" id="authenticationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="loginModal">
            <div class="modal-header">
                <h5 class="modal-title "><%= __('LOGIN') %></h5>
            </div>
            <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <span><%= __('EMAIL') %></span>
                        </div>
                        <div class="form-group col-md-9" >
                            <input id="loginEmail" type="email" placeholder="<%= __('EMAIL') %>" style="width:100%">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <span>Password</span>
                        </div>
                        <div class="form-group col-md-9">
                            <input id="loginPassword" type="password" placeholder="*********" style="width:100%">
                        </div>
                    </div>
                    <button id="doLogin" class="btn btn-block btn-primary"><%= __('LOGIN') %></button>
                <hr>
                <p class="text-center"><small><%= __('N_TEM_CONTA') %></small></p>
                <button id="registerBtn" class="btn btn-block btn-primary"><%= __('REGISTAR') %></button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-block btn-secondary" data-dismiss="modal"><%= __('FECHAR') %></button>
            </div>
        </div>
        <div class="modal-content" id="registerModal" style="display:none">
            <div class="modal-header">
                <h5 class="modal-title"><%= __('REGISTAR') %></h5>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <input id="registerEmail" type="email" placeholder="<%= __('EMAIL') %>" style="width:100%">
                    </div>
                    <div class="form-group">
                        <input id="registerFirstName" type="text" placeholder="<%= __('PRIMEIRO_NOME') %>" style="width:100%">
                    </div>
                    <div class="form-group">
                        <input id="registerLastName" type="text" placeholder="<%= __('LAST_NAME') %>" style="width:100%">
                    </div>
                    <div class="form-group">
                        <input id="registerPassword" type="password" placeholder="********" style="width:100%">
                    </div>
                    <div class="form-group">
                        <input id="registerPasswordConfirmation" type="password" placeholder="********" style="width:100%">
                    </div>
                    <button id="doRegister" class="btn btn-block btn-primary"><%= __('REGISTAR') %></button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-block btn-secondary" data-dismiss="modal"><%= __('FECHAR') %></button>
            </div>
        </div>
    </div>
</div>