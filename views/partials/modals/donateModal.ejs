<div class="modal fade" id="donateModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="text-center modal-header">
                <h3><b>Quero Ajudar</b></h3>
            </div>
            <div class="modal-body">
                <form method="post" action="<%=formUrl%>">
                    <div id="quantityContainer1">
                        <div class="form-group text-center">
                            <span><b>Quantia</b></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="number" name="amount" min="1" required>
                        </div>
                        <div class="form-row">
                            <div class="col-sm-6">
                                <button <%if(userLogged){ %>id="nextBtn"<% } else {%> id="authenticateBtn" <%}%>
                                class="btn btn-primary btn-block" type="button">Seguinte</button>

                            </div>
                            <div class="col-sm-6">
                                <button type="button" class="btn btn-block btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                    <div id="checkDonationContainer" style="display:none">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <div class="form-group text-center">
                            <h3>Conclua a sua doação:</h3>
                        </div>
                            <div class="form-group text-center">
                                <h2><b>Métodos de Pagamento</b></h2>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-block btn-primary">Paypalee</button>
                            </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>