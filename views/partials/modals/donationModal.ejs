<div class="modal fade" id="donationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="text-center modal-header">
                <h3><b>Quero Ajudar</b></h3>
            </div>
            <div class="modal-body">
                <form method="post" action="/users/donate">
                    <div id="quantityContainer">
                        <div class="form-group text-center">
                            <span><b>Quantia</b></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="number" min="1">
                        </div>
                        <div class="form-row">
                            <div class="col-sm-6">
                                <button type="button" class="btn btn-block btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                            <div class="col-sm-6">
                                <button type="button" class="goToCategory btn btn-primary btn-block">Depois</button>
                            </div>
                        </div>
                    </div>
                    <div id="categoryContainer" style="display:none">
                        <div class="form-group text-left">
                            <span><b>Category</b></span>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-6 text-center">
                                <input type="radio" name="category" checked>Todos<br>
                                <input type="radio" name="category">Categoria1<br>
                                <input type="radio" name="category">Categoria2<br>
                                <input type="radio" name="category">Categoria3<br>
                                <input type="radio" name="category">Categoria4<br>
                                <input type="radio" name="category">Categoria5<br>
                                <input type="radio" name="category">Categoria6<br>
                                <input type="radio" name="category">Categoria7<br>
                            </div>
                            <div class="form-group col-sm-6 text-center">
                                <input type="radio" name="category">Categoria1<br>
                                <input type="radio" name="category">Categoria2<br>
                                <input type="radio" name="category">Categoria3<br>
                                <input type="radio" name="category">Categoria4<br>
                                <input type="radio" name="category">Categoria5<br>
                                <input type="radio" name="category">Categoria6<br>
                                <input type="radio" name="category">Categoria7<br>
                                <input type="radio" name="category">Categoria8<br>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-sm-6">
                                <button type="button" class="goToQuantity btn btn-primary btn-block">Antes</button>
                            </div>
                            <div class="col-sm-6">
                                <button type="button" class="goToLocation  btn-primary btn btn-block">Depois</button>
                            </div>
                        </div>
                    </div>
                    <div id="locationContainer" style="display:none">
                        <div class="form-group">
                            <span><b>Localização</b></span>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-6 text-center">
                                <input type="radio" name="location" checked>Todos<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                            </div>
                            <div class="form-group col-sm-6 text-center">
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                                <input type="radio" name="location">Localização<br>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-sm-6">
                                <button type="button" class="goToCategory btn btn-primary btn-block">Antes</button>
                            </div>
                            <% if(!userLogged){ %>
                            <div class="col-sm-6">
                                <button type="button" class="goToAuthenticate btn btn-primary btn-block">Autenticar-se!</button>
                            </div>
                            <% } else {%>
                            <div class="col-sm-6">
                                <button type="button" class="checkDonation btn btn-primary btn-block">Seguinte</button>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>