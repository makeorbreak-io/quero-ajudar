<!DOCTYPE html>
<html>
<head>
    <% include ../../partials/head %>
</head>
<body>
<% include ../../partials/header %>
<div class = "container container-background">
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-10 col-md-6 text-left">
            <h1><%=campaign.name%></h1>
        </div>
        <div class="col-2 col-md-2 btn-lg text-right">
            <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#exampleModal">
                <%= __('QUERO_AJUDAR') %>
            </button>
        </div>
        <div class="col-md-2"></div>

        <div class="col-md-2"></div>
        <div class="col-12 col-md-8 c-wrapper">
            <div id="carouselSlider" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselSlider" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselSlider" data-slide-to="1"></li>
                    <li data-target="#carouselSlider" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <% for(var i=0; i<campaign.images.length; i++) {%>

                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="campaign.images.path[i]">
                        <div class="carousel-caption d-none d-md-block">
                        </div>
                    </div>

                    <% } %>
                </div>
                <a class="carousel-control-prev" href="#carouselSlider" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselSlider" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row smallTopBuffer">

        <div class="col-0 col-md-2">
        </div>
        <div class ="col-12 col-md-8 text-left">
            <p>
                <%=campaign.description%>
            </p>
        </div>
        <div  class="col-0 col-md-2">
        </div>
    </div>

    <div class="row text-center topBuffer">
        <div class="col-0 col-md-3">
        </div>
        <div class="col-12 col-md-6 text-center">
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#exampleModal">
                <%= __('QUERO_AJUDAR') %>
            </button>
        </div>
        <div class="col-0 col-md-3">
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-12" style="padding:50px">
            <h1 class="text-center">Outras maneiras de ajudar</h1>
        </div>

        <% for(var i=0; i<organization.goods.length; i++) {%>

        <div class="col-md-3">
        </div>
        <div class="col-4 col-md-2 text-center">
            <img src="/image/goods/"+<%=campaign.goods[i].type + ".png"%> style="width:100px;height:100px">
            <p><%=campaign.goods[i].type%></p>
        </div>

        <% } %>
    </div>

    <div class="row ">
        <div class="col-md-4"></div>
        <div class="col-12 col-md-1">
            <a href=<%=campaign.facebook%>><i class="fab fa-facebook fa-2x"></i></a>
        </div>
        <div class="col-12 col-md-1">
            <a href=<%=campaign.instagram%>><i class="fab fa-instagram fa-2x"></i></a>
        </div>
        <div class="col-12 col-md-2">
            <a name="website"></a>
            <a href=<%=campaign.website%>>website</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-12 col-md-6">
            <h1 class=" text-center">Localização</h1>
        </div>
        <div class="col-md-3">
        </div>

    </div>

    <div class = "row">

    <% for(var i=0; i<campaign.headquarters.length; i++) {%>

        <div class="col-md-3">
        </div>
        <div class="col-12 col-md-6 text-center">
            <h3><%=campaign.headquarters.adress[i]%> ,
                <%=campaign.headquarters.zipcode[i]%> ,
                <%=campaign.headquarters.phoneNumber1[i]%> | <%=organization.headquarters.phoneNumber2[i]%>,
                <%=campaign.headquarters.email[i]%> </h3>
        </div>
        <div class="col-md-3">
        </div>
    <% } %>


        <div class="col-md-3">
        </div>
        <div class="col-12 col-md-6 text-center">
            <h2>R. do Bonjardim 345, 4000-010 Porto</h2>
        </div>
        <div class="col-md-3">
        </div>
        <div class="col-md-3">
        </div>
        <div class="col-12 col-md-6 text-center">
            <div id="map">

            </div>
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>
<% include ../../partials/footer %>
<script>
    function initMap() {
        var uluru = {lat: 41.1497299, lng: -8.6102169};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 18,
            center: uluru
        });
        for(var i=0; i<campaign.headquarters; i++){
        var marker = new google.maps.Marker({
            position: {
                lat: campaign.headquarters.lat[i],
                lng: campaign.headquarters.lng[i],
            },
            map: map
        });
        }
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCX8fq5dNVN_dr1eW37fdW0AcZtpD1GKbU&callback=initMap">
</script>
</body>
</html>