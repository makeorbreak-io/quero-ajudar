<!DOCTYPE html>
<html>
<head>
    <% include ../../partials/head %>
</head>
<body>
<% include ../../partials/header %>
<div class = "container container-background text-dark">
    <br/>
    <div class="row">
        <div class="col-12">
            <h1 class="text-center"><%= __('CAMPANHAS') %></h1>
        </div>
        <div class="col-6 col-md-1 text-right">
            <i class="fas fa-filter fa-2x"></i>
        </div>
        <div class="col-6 col-md-3 text-left">
            <h3><%= __('FILTRAR_POR') %></h3>
        </div>
        <div class="col-6 col-md-4 text-right">
            <div class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="categoriesDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= __('CATEGORIA') %>
                </a>

                <div class="dropdown-menu" aria-labelledby="categoriesDropdown">
                    <% for(var i=0; i<categories.length; i++) { %>
                    <a class="dropdown-item" href="/campanhas?category=<%=categories[i]%>"><%= __(categories[i]) %></a>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 text-right">
            <div class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="locationsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= __('LOCALIZACAO') %>
                </a>

                <div class="dropdown-menu" aria-labelledby="locationsDropdown">
                    <% for(var i=0; i<locations.length; i++) { %>
                    <a class="dropdown-item" href="/campanhas?location=<%=locations[i]%>"><%= __(locations[i]) %></a>
                    <% } %>
                </div>
            </div>
        </div>
        <% for(var i=0; i< campaigns.length; i++) { %>
        <div class="col-12 col-sm-6 col-md-4 text-center">
            <div class="card">
                <img class="card-img-top" src="<%=campaigns[i].images[0].path%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%=campaigns[i].name%></h5>
                    <p class="card-text"><%=campaigns[i].description%></p>
                </div>
                <div class="card-footer">
                    <a href="/campanhas/<%=campaigns[i].urlName%>" class="btn btn-primary"><%= __('SABER_MAIS') %></a>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
<% include ../../partials/footer %>
</body>
